<div id="show-header">
  <h1><%= @task.title %></h1>
  <%= link_to '<i class="fas fa-pencil-alt"></i>&nbsp; Edit this task'.html_safe, edit_task_path, class: "btn btn-outline-secondary" %>
</div>

<p><%= @task.details %></p>

<% msg_completed = @task.completed ? "This task is completed" : "This task is not completed yet" %>

<label for="<%= "task_#{@task.id}" %>">
  <%= check_box_tag "task_#{@task.id}", @task.title, @task.completed %>
  <%= msg_completed %>
</label>

<hr />

<%= link_to '<i class="fas fa-undo-alt"></i>&nbsp; Back to List'.html_safe, tasks_path %>
