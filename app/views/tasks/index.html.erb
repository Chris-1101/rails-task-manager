<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <label for="<%= "task_#{task.id}" %>">
        <%= check_box_tag "task_#{task.id}", task.title, task.completed %>
        <%= link_to task.title, task_path(task) %> Â·
        <small><%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></small>
      </label>
    </li>
  <% end %>
</ul>

<hr />

<%= link_to '<i class="far fa-plus-square"></i>&nbsp; Add a new task'.html_safe, new_task_path %>
